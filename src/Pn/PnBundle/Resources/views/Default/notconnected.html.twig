<div class="row wrap">
    <a href="#register" role="button" class="btn col-md-2 bg-blue left" data-toggle="modal">Inscription</a>
    <a href="#login" role="button" class="btn col-md-2 bg-purple right" data-toggle="modal">Connexion</a>
    <a href="{{ path('pn_pn_homepage') }}">
        <div class="logo">
            <h2 style="    text-align: right;">Parent</h2>
            <img src="{{ asset('bundles/pnpn/images/illus/logo.jpg') }}" alt="logo" height="80px" style="border: dashed lightgrey 1px;">
            <h2>Nounou</h2>
        </div>
    </a>
</div>


<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-blue white">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="register">Inscription</h3>
            </div>
            <div class="modal-body">
                <div id="registerErrors"></div>
                {{ render(controller("PnPnBundle:Default:Register")) }}
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                <h3 id="myModalLabel">Connexion</h3>
            </div>
            <div class="modal-body">
{#                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}#}

                <form action="{{ path('login_check') }}" method="post">
                    <input type="text" id="username" name="_username" placeholder="E-mail"/>

                    <input type="password" id="password" name="_password" placeholder="Mot de passe"/>

                    <input type="checkbox" id="remember_me"> Garder ma session active<br>

                    <button type="submit">Connexion</button>
                    <a href="" id="mdp_oublie">mot de passe oubli√© ?</a>
                </form>
            </div>
        </div>
    </div>
</div>

