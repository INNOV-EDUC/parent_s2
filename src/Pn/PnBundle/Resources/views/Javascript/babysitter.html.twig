            }

            var fsize = $('#uploadfile')[0].files[0].size; //get file size
            var ftype = $('#uploadfile')[0].files[0].type; // get file type


            //allow only valid image file types
            switch(ftype)
            {
                case 'image/png': case 'image/gif': case 'image/jpeg': case 'image/pjpeg':
                break;
