{# app/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>{% block title %}Parent-nounou.fr{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/global.css') }}" type="text/css" />
    {% endblock %}

</head>
<body>

<header>
    <div class="row">
        <div class="span8">
            <h1>Parent-nounou</h1>
        </div>
        {{ render(controller("PnUserBundle:Security:main")) }}
    </div>


</header>


<menu id="menu">
    <ul class="navbar row">
        <li class=" span2 {% if (menu_select == 1) %} active {% endif %}"><a href="#">Accueil</a></li>
        <li class=" span2 {% if (menu_select == 2) %} active {% endif %}"><a href="#">Annonces</a></li>
        <li class=" span2 {% if (menu_select == 3) %} active {% endif %}"><a href="#">Nounou</a></li>
        <li class=" span2 {% if (menu_select == 4) %} active {% endif %}"><a href="#">Formations</a></li>
    </ul>
</menu>

{% block body %}
{% endblock %}

<footer>
    @Copyright 2014 - INNOVEDUC
</footer>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalites du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}

</body>
</html>